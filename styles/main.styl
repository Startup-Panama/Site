// variables de colores
$users-copy-color = #cacaca
$users-circle-background = #9f9e9e
$facebook-blue = #3b5998
$twitter-cyan = #55acee
$title-color = #50687c
$btn-bg-color = #4fa3de
$btn-hover-state = #4188ba
$list-item-color = #888888
$bullets-color = #93a0ab
$read-manifesto-color = $users-copy-color


body
  font-family 'Open Sans', sans-serif
  font-size 18px
 
// clases para fuentes
.open-sans
  font-family 'Open Sans'
  .bold
    font-weight 700
    
  .semi-bold
    font-weight 600
    
  .regular
    font-weight 400
    
  .italic
    font-style italic
  
.lato
  font-family 'Lato'
  .bold
    font-weight 700
    
  .regular
    font-weight 400
    
  .italic
    font-style italic

// clases de alineado
.align-center
  text-align center
  
.align-left
  text-align left
  
.align-right
  text-align right

// clases de display
.display-block
  display block
  
.display-inline-block
  display inline-block
  
.display-inline
  display inline
  
.display-none
  display none

// reglas de estilo
div#hero
  margin-top 35px
  
header#header
  margin-top 20px

div#manifesto-signatures
  margin-bottom 30px
  
  div.circle
    background $users-circle-background
    border-radius 50%
    height 35px
    width 35px
    margin-right 10px
  p.users-copy
    color $users-copy-color
    font-size 14px

i.fa
  margin-top 5px
  font-size 35px
  margin-left 10px

i.fa-facebook-square
  color $facebook-blue

i.fa-twitter-square
  color $twitter-cyan

div#title h1
  margin-top 25px
  color $title-color

div#cta a.btn
  &:hover
    background-color $btn-hover-state
  color white
  background $btn-bg-color
  font-size 20px
  border 0px
  padding 10px 25px
  border-radius 6px
  margin-top 25px
  margin-bottom 10px

div#read-manifesto p
  &:hover
    color $users-circle-background
  cursor pointer
  margin-top 10px
  color $read-manifesto-color
  
div#read-manifesto p:after
  font-family "FontAwesome"
  content "\f107"
  width 100%
  height 20px
  display block

#manifesto-list
  margin-top 20px
  ul.row
    li
      margin-bottom 40px
      div.n
        color $bullets-color
        vertical-align middle
        width 8%
        font-size 42px
      div.content
        vertical-align middle
        color $list-item-color
        font-size 18px
        width 91%
  











  